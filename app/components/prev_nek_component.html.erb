<div data-controller="prev-nek"
     data-prev-nek-duration-value="<%= PostIndexComponent::DURATION %>"
     data-prev-nek-prev-is-nsfw-value="<%= prev.nsfw? %>"
     data-prev-nek-nek-is-nsfw-value="<%= nek.nsfw? %>"
     class="my-3"
     >

  <div class="flex flex-col items-center sm:flex-row gap-0 hover:bg-gray-100">

    <% if prev.present? %>
      <%= link_to comfy_blog_post_path(@site.path, prev.year, prev.month, prev.slug), 
          class: prev_css_classes,
          data: { 'prev-nek-target': 'prev' } do %>

        <%= image_tag prev.resized_blob_or_orig_or_placeholder_url(x: 72, y: 72),
            class: 'object-cover w-24 h-24 rounded-l-lg rounded-none rounded-l-lg' %>

        <div class="flex flex-col justify-between p-2 leading-normal">
          <h5 class="mb-2 tracking-tight text-gray-900 dark:text-white">
            <%= prev.title.truncate 50, separator: ' ', omission: ' ...' %>
          </h5>
        </div>
      <% end %>
    <% end %>

    <div class="basis-28 text-center px-3">
      <%= @category&.label || 'All Categories' %>
    </div>

    <% if nek.present? %>
      <%= link_to comfy_blog_post_path(@site.path, nek.year, nek.month, nek.slug),
          class: nek_css_classes,
          data: { 'prev-nek-target': 'nek' } do %>

        <%= image_tag nek.resized_blob_or_orig_or_placeholder_url(x: 72, y: 72),
            class: 'object-cover w-24 h-24 rounded-r-lg rounded-none rounded-r-lg' %>

        <div class="flex flex-col justify-between p-2 leading-normal">
          <h5 class="mb-2 tracking-tight text-gray-900 dark:text-white">
            <%= nek.title.truncate 50, separator: ' ', omission: ' ...' %>
          </h5>
        </div>
      <% end %>
    <% end %>

  </div>
</div>
