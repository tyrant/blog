<div id="modal_stim"
     class="relative 
            z-10"
     aria-labelledby="modal-title"
     aria-modal="true"
     role="dialog"
     x-data="{ isOpen: false }"
     x-on:open-irritate-modal="isOpen=true"
     data-controller="modal">

  <div class="fixed 
              inset-0 
              bg-gray-500 
              bg-opacity-75 
              transition-opacity"
       x-show="isOpen"
       x-transition:enter="ease-out duration-300"
       x-transition:enter-start="opacity-0"
       x-transition:enter-end="opacity-100"
       x-transition:leave="ease-in duration-200"
       x-transition:leave-start="opacity-100"
       x-transition:leave-end="opacity-0">
  </div>

  <div class="fixed
              z-10 
              inset-0 
              overflow-y-auto"
       x-show="isOpen"
       x-transition:enter="ease-out duration-300"
       x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
       x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
       x-transition:leave="ease-in duration-200"
       x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
       x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95">

    <div class="flex 
                items-end 
                sm:items-center 
                sm:p-0
                justify-center 
                min-h-full 
                p-4 
                text-center">

      <div class="relative 
                  bg-white 
                  rounded-lg 
                  text-left 
                  overflow-hidden 
                  shadow-xl 
                  transform 
                  transition 
                  transition-all 
                  sm:my-8 
                  sm:max-w-lg 
                  sm:w-full">
              
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <%= content_for :modal_body %>
        </div>
  
        <div class="px-4
                    py-5
                    sm:px-6
                    sm:flex
                    sm:flex-row-reverse">

          <% if content_for? :modal_button_cancel %>
            <button class="mt-3
                           w-full
                           inline-flex
                           justify-center
                           rounded-md
                           border
                           border-gray-300
                           shadow-sm
                           px-4
                           py-2
                           bg-white
                           text-base
                           font-medium
                           text-gray-700
                           hover:bg-gray-50
                           focus:outline-none
                           focus:ring-2
                           focus:ring-offset-2
                           focus:ring-indigo-500
                           sm:mt-0
                           sm:ml-3
                           sm:w-auto
                           sm:text-sm"
                      x-on:click="isOpen=false">
              Cancel
            </button>
          <% end %>
          
          <%= content_for :modal_button if content_for? :modal_button %>
        </div>
      </div>
    </div>
  </div>
</div>
