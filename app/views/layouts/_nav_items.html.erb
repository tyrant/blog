<% current_classes = %w(bg-gray-900 text-white) %>
<% default_classes = %w(text-gray-300 hover:bg-gray-700 hover:text-white) %>

<% @nav_items.each do |nav_item| %>
  <% others = current_page?(nav_item[:path]) ? current_classes : default_classes %>
  <% css_classes = shared_classes.dup.push(*others) %>

  <%= link_to nav_item[:label], nav_item[:path], class: css_classes, aria: current_page?(nav_item[:path]) ? { current: 'page' } : {} 
  %>
<% end %>
